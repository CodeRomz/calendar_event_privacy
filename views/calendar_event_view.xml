<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_calendar_event_form_calendar_view_privacy" model="ir.ui.view">
        <field name="name">calendar.event.form.calendar_view_privacy</field>
        <field name="model">calendar.event</field>
        <field name="inherit_id" ref="calendar.view_calendar_event_form"/>
        <field name="arch" type="xml">
            <!-- Put the new selector just after the native Privacy field -->
            <xpath expr="//field[@name='privacy']" position="after">
                <label for="calendar_view"/>
                <field name="calendar_view" string="Calendar visibility"/>
            </xpath>
        </field>
    </record>
</odoo>
